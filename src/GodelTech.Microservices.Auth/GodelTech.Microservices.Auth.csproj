<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net5.0</TargetFrameworks>
    <PackageId>GodelTech.Microservices.Auth</PackageId>
    <VersionPrefix>1.1.0-rc.1</VersionPrefix>
    <Authors>v.rodchenko</Authors>
    <Company>Godel Technologies</Company>
    <Description>Library to work with auth for different clients</Description>
    <Copyright>Godel Technologies 2020</Copyright>
    <PackageLicenseUrl>https://github.com/GodelTech/GodelTech.Microservices.Auth/blob/main/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/GodelTech/GodelTech.Microservices.Auth/wiki</PackageProjectUrl>
    <PackageIconUrl>https://www.gravatar.com/avatar/839234621070de51e7b9cabd5ceee8fe?s=64</PackageIconUrl>
    <RepositoryUrl>https://github.com/GodelTech/GodelTech.Microservices.Auth</RepositoryUrl>
    <PackageTags>Auth IdentityModel</PackageTags>

    <!-- XML documentation -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Source Link needs this -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- SonarQube needs this -->
    <ProjectGuid>{00000000-0000-0000-0000-000000000001}</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IdentityModel" Version="4.4.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
    
    <!-- Source Link needs this -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
